{
	"name": "obsidian-server-panel",
	"private": true,
	"version": "0.0.0",
	"description": "A beautiful minecraft server dashboard panel",
	"author": "Drew Chase",
	"license": "GPL-3.0-or-later",
	"repository": "",
	"type": "module",
	"scripts": {
		"dev": "node scripts/dev.js",
		"build-api": "cargo build --release",
		"run-api": "cargo run --bin obsidian-server-panel",
		"build-frontend": "tsc && vite build",
		"watch-api": "cargo watch -x \"run --bin obsidian-server-panel\" -C target/dev-env -N --why -w ../../src-actix",
		"clean": "cargo clean",
		"build": "node scripts/build.js",
		"clean-build": "npm run clean && npm run build"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "6.7.1",
