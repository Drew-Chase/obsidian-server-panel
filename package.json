{
  "name": "obsidian-server-panel",
  "private": true,
  "version": "0.0.0",
  "description": "A beautiful minecraft server dashboard panel",
  "author": "Drew Chase",
  "license": "GPL-3.0-or-later",
  "repository": "",
  "type": "module",
  "scripts": {
    "build api": "cargo build --release",
    "run api": "cargo run --bin project_name",
    "dev": "vite",
    "build frontend": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build and preview": "npm run build && npm run preview",
    "publish": "node scripts/publish.js",
    "run": "node scripts/run.js",
    "watch api": "cargo watch -x \"run --bin obsidian-server-panel\" -C dist -N --why -w ../src-axium/",
    "watch frontend": "vite build --watch"
  },
  "dependencies": {
    "@nextui-org/react": "^2.4.6",
    "framer-motion": "^11.5.4",
    "jquery": "^3.7.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.30",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "postcss": "^8.4.45",
    "postcss-import": "^16.1.0",
    "sass": "^1.78.0",
    "sass-loader": "^16.0.1",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2",
    "vite": "^5.4.4",
    "basic-ftp": "^5.0.5",
    "archiver": "^7.0.1"
  }
}