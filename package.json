		"@fortawesome/free-solid-svg-icons": "6.7.1",
		"@fortawesome/react-fontawesome": "0.2.2",
		"@monaco-editor/react": "4.6.0",
		"@nextui-org/react": "2.6.7",
		"framer-motion": "11.13.5",
		"jquery": "^3.7.1",
		"react": "18.3.1",
		"react-cropper": "^2.3.3",
		"react-dom": "18.3.1",
		"react-router-dom": "6.28.0",
		"react-syntax-highlighter": "15.6.1",
